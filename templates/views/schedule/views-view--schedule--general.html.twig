{%
  set classes = [
    dom_id ? 'js-view-dom-id-' ~ dom_id,
  ]
%}
<div{{attributes.addClass(classes)}}>
	{{ title_prefix }}
	{{ title }}
	{{ title_suffix }}

	{% if header %}
		<header>
			{{ header }}
		</header>
	{% endif %}


	{{ attachment_before }}

	<div class='schedule-filters'>
		{{ exposed }}
	</div>

	<div class='schedule-content'>
		{% if rows -%}
			{{ rows }}
		{% elseif empty -%}
			{{ empty }}
		{% endif %}
		{{ pager }}

		{{ attachment_after }}
		{{ more }}

		{% if footer %}
			<footer>
				{{ footer }}
			</footer>
		{% endif %}
	</div>

</div>
